<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-2">
        <div class="card-body mt-2">
            <h4>{{this.titulo}}</h4>
            <p> Descrição: {{this.descricao}}</p>
            {{!-- <small>Data: {{this.data}}</small><br> --}}
            <small>Categoria: {{this.categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{this._id}}"><button class="btn btn-success mt-1">Editar Postagem</button></a>
            <a href="/admin/postagens/deletar/{{this._id}}"><button class="btn btn-danger mt-1">Deletar Postagem</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}